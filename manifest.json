{
	"name": "Canvas improver",
	"description": "Build an Extension!",
	"version": "1.2",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage", "activeTab", "scripting", "tabs",
				"notifications"],
	
	"host_permissions": [
				"https://*/"
		],
	"content_scripts": [
		{
			"matches": ["https://*/*"],
			"js": ["insert_menu.js"],
			"run_at": "document_end"
		},
		{
			"matches": ["https://*/*"],
			"js": ["insert_custom_links.js"],
			"run_at": "document_end"
		},
		{
			"matches": ["https://*/*"],
			"js": ["group_cards.js"],
			"run_at": "document_end"
		}
	]
}